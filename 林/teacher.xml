<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/main"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".MainActivity">


   <TextView
       android:id="@+id/teacher"
       android:layout_width="247dp"
       android:layout_height="82dp"
       android:text="老師專區"
       android:textSize="60sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.774"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.08" />

   <Button
       android:id="@+id/teachertokid"
       android:layout_width="192dp"
       android:layout_height="208dp"
       android:layout_marginTop="55dp"
       android:scaleType="centerCrop"
       android:text="與孩子互動"
       android:textSize="48sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.945"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/teacher" />


   <Button
       android:id="@+id/teachertoparent"
       android:layout_width="192dp"
       android:layout_height="208dp"
       android:layout_marginEnd="12dp"
       android:scaleType="centerCrop"
       android:text="與家長互動"
       android:textSize="48sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/teachertokid" />

   <ImageButton
       android:id="@+id/teacherform"
       android:layout_width="90dp"
       android:layout_height="82dp"
       android:background="#00000000"
       android:scaleType="centerCrop"
       app:layout_constraintBottom_toTopOf="@+id/teacherpicturestudents"
       app:layout_constraintEnd_toStartOf="@+id/teacher"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/form" />

   <ImageButton
       android:id="@+id/teacherpicturestudents"
       android:layout_width="181dp"
       android:layout_height="209dp"
       android:background="#00000000"
       android:scaleType="centerCrop"
       app:layout_constraintBottom_toTopOf="@+id/teachertoparent"
       app:layout_constraintEnd_toStartOf="@+id/teachertokid"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/teacher"
       app:srcCompat="@drawable/student" />

   <ImageButton
       android:id="@+id/teacherpictureparent"
       android:layout_width="181dp"
       android:layout_height="209dp"
       android:layout_marginStart="16dp"
       android:background="#00000000"
       android:scaleType="centerCrop"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/teachertoparent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/teacherpicturestudents"
       app:srcCompat="@drawable/parents" />


</androidx.constraintlayout.widget.ConstraintLayout>
